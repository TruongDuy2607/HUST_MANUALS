<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#F2E1E1">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="-30dp"
        android:id="@+id/profile_img_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/img_default"
        app:civ_border_color="#CD1627"
        app:civ_border_width="2dp"/>
    <EditText
        android:id="@+id/profile_edt_fullname"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_radius"
        android:textColorHint="#9E9898"
        android:paddingLeft="20dp"
        android:textColorLink="@color/black"
        android:hint="Your name..."
        />
    <EditText
        android:id="@+id/profile_edt_email"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_radius"
        android:textColorHint="#9E9898"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColorLink="@color/black"
        android:hint="Email"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_btn_conf"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Update profile"
        android:textSize="20dp"
        android:justificationMode="inter_word"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:backgroundTintMode="add"
        app:cornerRadius="20dp"
        app:backgroundTint="#CD1627">
    </com.google.android.material.button.MaterialButton>
</LinearLayout>